alias s='git status -sb'

alias ga='git add'
alias gap='ga -p'
alias gd='git diff -w'
alias d='gd'
alias gd.="gd --color-words='.'"
alias gdc='gd --cached'

alias glp='git log -p'
alias gl='git smart-log'
alias glc='gl'
alias glcg='gl'

alias gc='git commit -v'
alias gca='gc -a'
alias gcam='gca --amend'
alias gcm='gc --amend'

alias gco='git checkout'

alias gbr='git branch -v'

alias gf='git fetch'
alias gfo='gf origin'

alias gm='git smart-merge'

alias gp='git push'
alias gpo='gp origin'
alias gpom='gpo master'

alias gr='git reset'
alias grh='gr --hard'
alias grs='gr --soft'

alias grb='git rebase -p'
alias grbc='grb --continue'
alias grba='grb --abort'
alias grbi='grb -i'

alias gs='git show'
alias gst='git stash'
alias gstp='git stash pop'

# can I do this in zsh?
alias gpthis='gpo HEAD:$(git_current_branch)'
alias gup='git smart-pull'
