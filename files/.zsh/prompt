project_pwd() {
  echo $PWD | sed -e "s/\/Users\/$USER/~/" -e "s/~\/projects\/\([^\/]*\)\/current/\\1/" -e "s/~\/Sites\/\([^\/]*\)\/current/http:\/\/\\1/"
}

ruby_version() {
  echo " â€¢ %{\e[0;90m%}$(ruby -v | awk '{print $2}')%{\e[0m%}"
}

export PROMPT=$'%n%{\e[0;90m%}@%{\e[0m%}%m
%{\e[0;%(?.32.31)m%}>%{\e[0m%} '
export RPROMPT=$'$(project_pwd)$(ruby_version)$(git_cwd_info)'
